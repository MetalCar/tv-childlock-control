{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2016",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["src/client/types/*"],
      "*": ["src/server/types/*"],
      "resources/*": ["src/resources/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}